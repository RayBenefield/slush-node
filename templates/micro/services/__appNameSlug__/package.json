{
    "name": "__appNameSlug__",
    "description": "__appDescription__",
    "version": "__appVersion__",
    "author": {
        "name": "__authorName__",
        "email": "__authorEmail__"
    },
    "main": "src/index.js",
    "engines": {
        "node": ">= 0.10.26",
        "npm": ">=1.4.3"
    },
    "scripts": {
        "dev": "nodemon src/index.js --exec babel-node",
        "docs": "aglio -i readme.md -s --theme-variables streak --theme-template triple --no-theme-condense",
